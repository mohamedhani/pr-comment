{
  "name": "pr-comment-action",
  "description": "GitHub Actions JavaScript Template",
  "version": "1.0.0",
  "author": "Mohamed Hani",
  "private": true,
  "homepage": "https://github.com/mohamedhani/pr-comment#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohamedhani/pr-comment.git"
  },
  "bugs": {
    "url": "https://github.com/mohamedhani/pr-comment/issues"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "pr-comment"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npx ncc build src/index.js -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "all": "npm run format:write && npm run lint && npm run package"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "./.github/linters/.eslintrc.yml"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/eslint-parser": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "@vercel/ncc": "^0.38.1",
    "babel-preset-jest": "^29.6.3",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^28.5.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.2.5"
  }
}
